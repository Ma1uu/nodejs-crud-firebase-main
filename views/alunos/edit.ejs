<h1>Editar Aluno</h1> 
<form action="/alunos/edit" method="POST"> 

    <input type="hidden" name="id" value="<%= aluno?.id || '' %>">
    
    <div class="form-group"> 
        <label for="nome">Nome</label> 
            <input type="text" class="form-control" id="nome" name="nome" value="<%= aluno?.nome || '' %>" required> 
    </div> 
    
    <div class="form-group mt-2">
        <label for="descricao">Descrição</label>
            <textarea name="descricao" id="descricao" class="form-control" rows="3"><%= aluno?.descricao || '' %></textarea>
        </div>
    
    <button type="submit" class="btn btn-primary mt-3">Atualizar</button> 
</form>