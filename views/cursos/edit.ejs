<h3>Editar Cursos</h3>
<form action="/cursos/edit" method="POST">

    <input type="hidden" name="id" value="<%= curso?.id || '' %>"> 

    <div class="form-group">
        <label for="nome">Curso</label>
            <input type="text" name="nome" id="nome" class="form-control" required value="<%= curso?.nome || '' %>">
    </div>

    <div class="form-group mt-2">
         <label for="descricao">Descrição</label>
         <input type="text" name="descricao" id="descricao" class="form-control" value="<%= curso?.descricao || '' %>">
    </div>
    <button type="submit" class="btn btn-success">Editar</button>
</form>